@{
    ViewBag.Title = "Categories";
    Layout = "~/Views/Shared/_CMSLayoutPage.cshtml";

    WebApplication1.Models.ArbejdArbejdDBDataContext db = new WebApplication1.Models.ArbejdArbejdDBDataContext();

    var Categories = db.aaCategories.OrderBy(i => i.CategoryName).ToList();
}
<h2>Categories</h2>
<div class="row">
    <div class="col-md-2 cms-left-menu">
        <a href="">Tilføj Kategori</a>
        <hr />
        @foreach (var item in Categories)
        {
            if (item.Main.Value)
            {
                <a href="?id=@item.Id"><b>@item.CategoryName</b></a>
            }
            else
            {
                <a href="?id=@item.Id">@item.CategoryName</a>
            }
            <br/>
        }
    </div>
    <div class="col-md-10">

    </div>
</div>
